<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajout d'un défi"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/cat_info_textview_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:text="Ajouter votre question et la réponse associée"/>

    <EditText
        android:id="@+id/question_edittext_add_challenge"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question" />

    <EditText
        android:id="@+id/answer1_edittext_add_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:hint="Réponse" />

    <Button
        android:id="@+id/submit_button_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:text="Ajouter le défi"/>

</LinearLayout>