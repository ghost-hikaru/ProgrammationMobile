<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background2">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/teal_700"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <!-- Icône au centre -->
            <ImageView
                android:id="@+id/personn_icon_shake"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                />

            <!-- Texte à gauche de l'icône -->
            <TextView
                android:id="@+id/namePlayer_textview_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_player"
                android:textColor="@color/white"
                android:fontFamily="@font/font_pixel"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Texte en dessous de l'icône -->
        <TextView
            android:id="@+id/scorePlayer_textview_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_pixel"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"/>
    </RelativeLayout>


    <!-- Rectangle gris pour le bas -->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/teal_700">

        <!-- Mini-titre -->
        <TextView
            android:id="@+id/title_defi_textview_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Défis n°Default"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/font_pixel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <!-- Texte en dessous du mini-titre -->
        <TextView
            android:id="@+id/content_defi_textview_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_defi_textview_compass"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/font_pixel"
            android:gravity="center"
            android:text="Trouvez l'orientation suivante :"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/bottom_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/compass_image"
            android:layout_width="215dp"
            android:layout_height="279dp"
            android:layout_centerInParent="true"
            android:src="@drawable/compass" />


        <LinearLayout
            android:id="@+id/progression_linearlayout_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compass_image"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/Progression_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_pixel"
                android:text="Orientation : " />

            <TextView
                android:id="@+id/textview_current_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/font_pixel"
                android:text="0" />

        </LinearLayout>

        <Button
            android:id="@+id/back_button_compass"
            android:layout_below="@id/progression_linearlayout_compass"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:text="@string/backtomenuFR"
            android:fontFamily="@font/font_pixel"
            android:background="@color/teal_700"
            android:visibility="invisible"
            />
    </RelativeLayout>
</RelativeLayout>