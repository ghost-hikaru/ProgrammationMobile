<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_question">

    <TextView
        android:id="@+id/title_textview_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajout d'un défi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cat_info_textview_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:text="Ajouter votre question et la réponse associée"
        android:layout_below="@id/title_textview_add_challenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/question_edittext_add_challenge"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question"
        android:layout_below="@id/cat_info_textview_add_challenge"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/answer1_edittext_add_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/font_pixel"
        android:hint="Réponse"
        android:layout_below="@id/question_edittext_add_challenge"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/submit_button_add_challenge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/font_pixel"
        android:background="@color/red"
        android:radius="20dp"
        android:text="Ajouter le défi"
        android:layout_marginBottom="300dp"
        android:layout_below="@+id/answer1_edittext_add_challenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/back_button_add_challenge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/font_pixel"
        android:background="@color/red"
        android:radius="20dp"
        android:text="Menu Principal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/submit_button_add_challenge"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
